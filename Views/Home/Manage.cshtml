@using WebSupport.Entities
@using WebSupport.Models.ViewModels

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/_LayoutMain.cshtml";
}

@model IList<IssueViewModel>


<div class="table-scroll">
    <h2 style="margin-top:15px;margin-bottom:5px;">Новые задачи</h2>
    <hr align="right" width="100%" size="10" color="#0f4591" style="margin-top:0;" />
    <br />
    <table name="table" class="table">
        <tread class="table-row-tread">
            <tr class="columns-table">
                <th>Проект</th>
                <th>Трекер</th>
                <th>Тема</th>
                <th>Описание</th>
                <th>Создано</th>
                <th>Автор</th>
                <th></th>
            </tr>
        </tread>
        <tbody id="me-rows">
   
            @if (Model.Count() > 0)
            {
                foreach (var issue in Model)
                {
                    <tr>
                        <td id="row-table-td"  class="cell-multi">@issue.ProjectName</td>
                        <td id="row-table-td">@issue.TrackerName</td>
                        <td id="row-table-td">@issue.issue.Subject</td>
                        <td id="row-table-td" name="desc-cell" class="cell-multi">@issue.issue.Description</td>
                        @if (issue.issue.CreatedOn != null)
                        {
                            string time = ((DateTime)issue.issue.CreatedOn).ToString("f");
                            <td id="row-table-td">@time</td>
                        }
                        else
                        {
                            <td id="row-table-td"></td>
                        }
                        <td name="time" id="row-table-td">@issue.AuthorName</td>
                        <td><a class="assign-self-a"  href="manager/issue/submit/@issue.issue.Id">Назначить себя</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
