@using WebSupport.Account
@using WebSupport.Data
@using WebSupport.DataEntities;
@using WebSupport.Models.ViewModels

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/_LayoutMain.cshtml";
}

@model IList<IssueViewModel>


    <input id="idProjectLabel" hidden/>

<div class="table-scroll">
    @{
        string name = Account.currentUser.Lastname + ' ' + Account.currentUser.Firstname[0].ToString() + '.';
        string admin = "";
        if (Account.currentUser.Admin)
        {
            admin = "Администратор";
        }
        else
        {
            admin = "Сотрудник";
        }
    }
    <div id="div_top_hypers">
        <ul style="margin-top:15px; text-align:end; font-size:18px;" id="ul_top_hypers">
            <li id="user-label">@admin: @name</li>
            <li>
                <h2 id="main-header">Новые задачи</h2>
                <hr align="right" width="100%" size="3" color="#1e5484" style="width:99%; margin-top:0;" />
                <br />
            </li>
        </ul>

    </div>

    <div class="sort-div">
        @{
            List<Project> projects = ViewData["projects"] as List<Project>;


            IEnumerable<SelectListItem> projectDDL = new SelectList(projects.ToList(), "Id", "Name");

            ViewData.Add("projectDDL", projectDDL);
        }
        @Html.DropDownList("projectsDDL", ViewData["projectDDL"] as IEnumerable<SelectListItem>, new { @class = "form-control", required = "required", @onchange = "GetSelectedTextValue(this)" })
    </div>

    <table name="table" class="table">
        <tread class="table-row-tread">
            <tr class="columns-table">
                <th>Трекер</th>
                <th>Тема</th>
                <th>Описание</th>
                <th>Автор (cоздано)</th>
                <th></th>
            </tr>
        </tread>
        <tbody id="me-rows">
   
            @if (Model.Count() > 0)
            {
                foreach (var issue in Model)
                {
                    <tr>
                        <td id="row-table-td">@issue.TrackerName</td>
                        <td id="row-table-td">@issue.issue.Subject</td>
                        <td id="row-table-td" name="desc-cell" class="cell-multi">@issue.issue.Description</td>
                        @if (issue.issue.CreatedOn != null)
                        {
                            string time = ((DateTime)issue.issue.CreatedOn).ToString("g");
                            <td name="time" id="row-table-td">@issue.AuthorName (@time)</td>
                        }
                        else
                        {
                            <td name="time" id="row-table-td">@issue.AuthorName</td>
                        }
                        <td><a class="assign-self-a"  href="manager/issue/submit/@issue.issue.Id">Взять в работу</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    function GetSelectedTextValue(projectsDDL) {
        var selectedText = projectsDDL.options[projectsDDL.selectedIndex].innerHTML;
        var selectedValue = projectsDDL.value;

        var formData = new FormData();
        formData.append("value", projectsDDL.value);


        $.ajax({
            method: 'post',
            url: "/manager/issue/new/"+projectsDDL.value,
            data: formData,
            processData: false,
            contentType: false,
            success: function () {
            }
        });

        alert("Selected text: " + selectedText + " Value: " + selectedValue);
       // location.reload();
    }
</script>