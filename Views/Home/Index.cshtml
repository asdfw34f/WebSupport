@using Newtonsoft.Json
@using Redmine.Net.Api.Types;
@using RedmineLibrary.Servieces;
@{
    List<Project> projects = Manager.DB.Projects;
    List<Tracker> trackers = Manager.DB.Trackers;
    List<Issue> issues = Manager.DB.Issues;

    List<SelectListItem> list = new List<SelectListItem>();
}


<div>
    <form asp-controller="Home" asp-action="Add" method="post">
     <ul>
         <li>
                @{
                    list = new List<SelectListItem>();
                    foreach (Project p in projects)
                    {
                        list.Add(new SelectListItem() { Text = p.Name, Value = p.Id.ToString() });
                    }
         }
                @Html.DropDownList("projectsItems", list, "Выберите проект")
         </li>
         <li>
                @{
                    list = new List<SelectListItem>();
                    foreach (Tracker t in trackers)
                    {
                        list.Add(new SelectListItem() { Text = t.Name, Value = t.Id.ToString() });
                    }
                }
                @Html.DropDownList("trackersItems", list, "Выберите проект")
         </li>
         <li>
             <input class="btn" type="submit" value="Подать заявку" action="Index"/>
         </li>
     </ul>
    </form>
</div>
