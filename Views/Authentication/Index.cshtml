
@{
    ViewData["Title"] = "Авторизация";
    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
}

<div class="container">
    <ul>
        <li>
            <div>
                <img class="loading" src="~/res/account.png" />
            </div>
        </li>
<li>
            <form method="post" enctype="multipart/form-data" asp-controller="Authentication" asp-action="Index">
                <ul>
                    <li>
                        <ul>
                            <li>

                                <label for="username">
                                    Введите ваш логин
                                </label>

                            </li>

                            <li>
                                <input name="username" value="" placeholder="Логин" type="text"
                                       autocomplete="on"
                                       required />

                            </li>
                        </ul>

                    </li>
                    <li>
                        <ul>
                            <li>

                                <label for="password">
                                    Введите ваш пароль
                                </label>
                            </li>
                            <li>

                                <input name="password"
                                       type="password"
                                       value=""
                                       placeholder="Пароль"
                                       autocomplete="on"
                                       required />
                            </li>
                        </ul>
                    </li>

                    <li>
                        <input type="submit" class="btn" name="commit" value="Войти" title="Войти" />
                    </li>
                    @ViewBag.username
                </ul>
            </form>
        </li>
    </ul>
</div>