
@{
    ViewData["Title"] = "Авторизация";
    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
}

<div>
            <form method="post" enctype="multipart/form-data" asp-controller="Authentication" asp-action="Index">
                <ul>
                    <li>
                        <h2>
                            Техническая поддержка
                        </h2>
                    </li>
                    <li>
                            <img  src="~/res/account.png" />
                    </li>
                    <li>
                <input style="font-size:25px;" name="username" value="" placeholder="Логин" type="text"
                               autocomplete="on"
                               required />
                    </li>
                    <li>
                <input style="font-size:25px;" name="password"
                               type="password"
                               value=""
                               placeholder="Пароль"
                               autocomplete="on" />
                    </li>
                    <li>
                <input style="font-size:25px;" type="submit" class="btn" name="commit" value="Войти" title="Войти" />
                    </li>
                    <li>
                        <label class="bag">
                            @ViewBag.username

                        </label>
                    </li>
                </ul>
            </form>
</div>