
@{
    ViewData["Title"] = "Авторизация";
    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
}

<div class="main">
    <ul>

        <li>
            
        </li>
        <li>
            <form class="container" method="post" enctype="multipart/form-data" asp-controller="Authentication" asp-action="Index">
                <ul>
                    <li>
                        <h2>
                            Техническая поддержка
                        </h2>
                    </li>
                    <li>
                        <div>
                            <img class="account-img" src="~/res/account.png" />
                        </div>
                    </li>
                    <li>
                        <input name="username" value="" placeholder="Логин" type="text"
                               autocomplete="on"
                               required />
                    </li>
                    <li>
                        <input name="password"
                               type="password"
                               value=""
                               placeholder="Пароль"
                               autocomplete="on" />
                    </li>
                    <li>
                        <input type="submit" class="btn" name="commit" value="Войти" title="Войти" />
                    </li>
                    @ViewBag.username
                </ul>
            </form>
        </li>
    </ul>
</div>